{
  "name": "tripetto-forms-boilerplate",
  "title": "Tripetto Forms Provider Boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for creating providers for Tripetto Forms.",
  "license": "UNLICENSED",
  "private": true,
  "homepage": "https://git.marblecore.com/tripetto/forms/providers/boilerplate",
  "author": {
    "name": "Mark van den Brink",
    "email": "mark@vandenbr.ink",
    "url": "http://mark.vandenbr.ink"
  },
  "repository": {
    "type": "git",
    "url": "https://git.marblecore.com/tripetto/forms/providers/boilerplate.git"
  },
  "bugs": {
    "url": "https://git.marblecore.com/tripetto/forms/providers/boilerplate/issues"
  },
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "start": "npm test",
    "update": "shx rm -rf ./node_modules/@tripetto ./package-lock.json && npm install --ignore-scripts",
    "clean": "shx rm -rf ./dist/*",
    "format": "prettier --tab-width 4 --print-width 140 --write \"src/**/*.ts\" \"types/**/*.ts\"",
    "lint": "tslint -c ./tslint.json ./src/**/*.ts ./types/**/*.ts",
    "test": "webpack -d && concurrently -n \"tripetto,webpack\" -c \"blue.bold,green\" -k -s \"first\" \"tripetto ./forms/example.json\" \"webpack -d --watch\"",
    "build": "npm run clean && npm run format && npm run lint && webpack -p",
    "make": "npm run update && npm run build",
    "version": "npm run make && git add -A ./dist",
    "postversion": "npm publish && git push --follow-tags"
  },
  "devDependencies": {
    "@marblecore/tslint-configuration": "^5.5.1",
    "@tripetto/forms": "git+ssh://git@git.marblecore.com:tripetto/forms/editor.git",
    "concurrently": "^3.5.0",
    "prettier": "^1.5.3",
    "shx": "^0.2.2",
    "ts-loader": "^2.3.2",
    "tslint": "^5.5.0",
    "typescript": "^2.4.2",
    "webpack": "^3.4.1",
    "webpack-livereload-plugin": "^0.11.0"
  },
  "tripetto": {
    "providers": [
      "."
    ]
  }
}
