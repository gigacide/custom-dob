{
  "name": "tripetto-block-boilerplate",
  "title": "Tripetto Block Boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for creating a block for Tripetto.",
  "keywords": [
    "tripetto",
    "tripetto block"
  ],
  "license": "MIT",
  "private": true,
  "homepage": "https://gitlab.com/tripetto/blocks/boilerplate",
  "author": {
    "name": "Mark van den Brink",
    "email": "mark@vandenbr.ink",
    "url": "http://mark.vandenbr.ink"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/tripetto/blocks/boilerplate.git"
  },
  "bugs": {
    "url": "https://gitlab.com/tripetto/blocks/boilerplate/issues"
  },
  "main": "builder/es5/index.js",
  "browser": "builder/es5/index.js",
  "module": "builder/es6/index.js",
  "unpkg": "builder/index.js",
  "scripts": {
    "start": "npm test",
    "format": "prettier --write \"src/**/*.ts\" \"*.json\" \"!package-lock.json\" \"*.yml\"",
    "lint": "tslint -c ./tslint.json ./src/**/*.ts",
    "pot": "node ./tasks/sources.js && xgettext -f ./translations/sources --language=\"JavaScript\" --keyword=\"npgettext:1c,2,3\" --keyword=\"dnpgettext:2c,3,4\" --keyword=\"_n:1,2\" --from-code=\"UTF-8\" --no-wrap --sort-output --force-po --no-location --add-comments=\"TRANSLATOR: \" --output=\"./translations/template.pot\" && shx rm -rf ./translations/sources && node ./tasks/pot.js",
    "test": "webpack --mode development && concurrently -n \"tripetto,webpack\" -c \"blue.bold,green\" -k -s \"first\" \"tripetto ./test/example.json\" \"webpack --mode development --watch\"",
    "make:clean": "shx rm -rf *.tgz ./builder ./runner",
    "make:compile": "tsc",
    "make:po2json": "shx rm -rf ./translations/*.json && node ./tasks/po2json.js",
    "make": "npm run make:clean && npm run lint && npm run pot && npm run make:po2json && webpack --mode production",
    "preversion": "npm run format && npm run lint && npm run make:compile && exit-on-dirty-git",
    "postversion": "git push --follow-tags",
    "prepack": "npm run make",
    "prepublishOnly": "exit-on-dirty-git",
    "publish:next": "git-branch-is next && npm version prerelease && npm publish --tag next",
    "publish:patch": "git-branch-is master && npm version patch && npm publish",
    "publish:minor": "git-branch-is master && npm version minor && npm publish",
    "publish:major": "git-branch-is master && npm version major && npm publish"
  },
  "devDependencies": {
    "@marblecore/tslint-configuration": "^6.1.1",
    "concurrently": "^5.1.0",
    "exit-on-dirty-git": "^1.0.1",
    "git-branch-is": "^3.1.0",
    "image-webpack-loader": "^6.0.0",
    "mkdirp": "^1.0.3",
    "po2json": "^0.4.5",
    "prettier": "^2.0.2",
    "shx": "^0.3.2",
    "tripetto": "^1.9.8-15",
    "tripetto-runner-foundation": "^2.0.2",
    "ts-loader": "^6.2.2",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3",
    "url-loader": "^4.0.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-livereload-plugin": "^2.3.0",
    "webpack-node-externals": "^1.7.2"
  },
  "tripetto": {
    "entry": "./builder/index.js",
    "translations": "./translations/",
    "blocks": [
      "."
    ],
    "noFurtherLoading": true
  }
}
